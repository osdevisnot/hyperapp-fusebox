{
  "name": "hyperapp-fusebox",
  "version": "1.0.0",
  "description": "Starting Point for a Hyperapp and Picostyle projects.",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist .fusebox",
    "predev": "npm run clean",
    "dev": "node fuse dev",
    "preprod": "npm run clean",
    "prod": "node fuse prod",
    "predist": "npm run clean",
    "dist": "node fuse dist",
    "presetup": "git clean -fdX",
    "setup": "npm install",
    "post-rewrite": "npm install",
    "post-merge": "npm install"
  },
  "dependencies": {
    "@hyperapp/router": "0.7.1",
    "hyperapp": "1.2.9",
    "picostyle": "2.0.1"
  },
  "devDependencies": {
    "fuse-box": "3.5.0",
    "husky": "1.1.4",
    "lint-staged": "9.0.0",
    "npm-sort": "0.0.4",
    "prettier": "1.15.2",
    "tslib": "1.9.3",
    "typescript": "3.0.3",
    "uglify-es": "3.3.9"
  },
  "lint-staged": {
    "*.{js,css,json}": [
      "prettier --single-quote --no-semi --print-width 120 --write",
      "git add"
    ],
    "*package.json": [
      "npm-sort",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
